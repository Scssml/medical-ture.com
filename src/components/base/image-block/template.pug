-
  const defaultOptionsImageBlock = {
    img: '',
    text: '',
  };

mixin imageBlock(options)
  - options = Object.assign({}, defaultOptionsImageBlock, options);

  .image-block&attributes(attributes)
    .image-block__img
      img(
        src= emptyImg,
        data-src= options.img,
        alt="image"
      ).lazyload

    if options.text
      .image-block__text= options.text
