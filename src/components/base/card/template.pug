-
  const defaultOptionsCard = {
    img: '',
    name: '',
  };

mixin card(options)
  - options = Object.assign({}, defaultOptionsCard, options);

  .card&attributes(attributes)
    .card__img
      img(
        src= emptyImg,
        data-src= options.img,
        alt="card"
      ).lazyload

    .card__content
      .card__name.h6.mb-4= options.name

      block
