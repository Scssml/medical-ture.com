-
  const defaultOptionsInput = {
    label: '',
    description: '',
    name: '',
    placeholder: '',
    type: 'text',
    required: false,
    disabled: false,
    light: false,
    error: 'Пожалуйста, заполните поле ввода',
  };

mixin input(options)
  -
    options = Object.assign({}, defaultOptionsInput, options);
    const classCss = (options.light) ? 'input--light' : '';

  label.input(class= classCss)&attributes(attributes)
    if options.label
      = options.label
      br

    if options.description
      .input__description.mt-1= options.description

    input(
      type=options.type
      name=options.name
      placeholder=options.placeholder
      required=options.required
      disabled=options.disabled
    ).mb-4

    .input__error-text= options.error
